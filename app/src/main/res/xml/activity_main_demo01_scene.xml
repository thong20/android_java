<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <!-- ===== START TRANSITION FOR OnSwipe =================================================== -->
    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1500">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/img_photo"
            motion:dragDirection="dragRight"
            motion:touchAnchorSide="right" />
    </Transition>
    <!-- ===== END TRANSITION FOR OnSwipe =================================================== -->

    <!-- ===== START TRANSITION FOR OnClick =================================================== -->
    <Transition
        motion:constraintSetEnd="@+id/end2"
        motion:constraintSetStart="@id/start"
        motion:duration="1500">
        <KeyFrameSet>
        </KeyFrameSet>
        <OnClick
            motion:targetId="@+id/img_photo" />
    </Transition>
    <!-- ===== END TRANSITION FOR OnClick =================================================== -->

    <!-- ===== START OnSwipe =================================================== -->
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#0000ff" />
            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="18sp" />
        </Constraint>
        <Constraint
            android:id="@+id/img_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent">
            <CustomAttribute
                motion:attributeName="saturation"
                motion:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            motion:layout_constraintLeft_toLeftOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">

            <CustomAttribute
                motion:attributeName="textSize"
                motion:customDimension="30sp"
                />
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="#ff0000" />

        </Constraint>
        <Constraint
            android:id="@+id/img_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintRight_toRightOf="parent">
            <CustomAttribute
                motion:attributeName="saturation"
                motion:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>
    <!-- ===== END OnSwipe =================================================== -->

    <!-- ===== START OnClick =================================================== -->
    <ConstraintSet android:id="@+id/end2">
<!--        <Constraint-->
<!--            android:id="@+id/tv_name"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            motion:layout_constraintLeft_toLeftOf="parent"-->
<!--            motion:layout_constraintRight_toRightOf="parent"-->
<!--            motion:layout_constraintTop_toTopOf="parent"-->
<!--            android:layout_marginTop="20dp">-->

<!--            <CustomAttribute-->
<!--                motion:attributeName="textSize"-->
<!--                motion:customDimension="30sp"-->
<!--                />-->
<!--            <CustomAttribute-->
<!--                motion:attributeName="textColor"-->
<!--                motion:customColorValue="#ff0000" />-->

<!--        </Constraint>-->
        <Constraint
            android:id="@+id/img_photo"
            android:layout_width="400dp"
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintRight_toRightOf="parent"
            motion:layout_constraintLeft_toLeftOf="parent">
            <CustomAttribute
                motion:attributeName="saturation"
                motion:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>
    <!-- ===== END OnClick =================================================== -->

</MotionScene>